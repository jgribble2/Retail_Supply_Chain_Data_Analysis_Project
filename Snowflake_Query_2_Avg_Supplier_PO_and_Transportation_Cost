SELECT 
    SU.SUPPLIER_NAME,
    AVG(PO.TOTAL_COST) AS AVG_PO_COST,
    AVG(TC.TOTAL_TRANSPORT_COST) AS AVG_TRANSPORTATION_COST
FROM
    "RETAIL_SUPPLY_CHAIN_DATA_PROJECT"."PUBLIC"."PURCHASE_ORDERS" AS PO
JOIN
    "RETAIL_SUPPLY_CHAIN_DATA_PROJECT"."PUBLIC"."SUPPLIERS" AS SU
    ON PO.SUPPLIER_ID = SU.SUPPLIER_ID
JOIN
    "RETAIL_SUPPLY_CHAIN_DATA_PROJECT"."PUBLIC"."TRANSPORTATION_COSTS" AS TC
    ON TC.ORIGIN_DC = 'DC901'
GROUP BY
    SU.SUPPLIER_NAME;
